                                    <h3 class="charges-caption">{!chargeGroup.productName}&nbsp;&nbsp;:&nbsp;&nbsp;{!chargeGroup.ratePlanName}</h3>
                                </apex:facet>
                                                             
                                <apex:column headerValue="Charge Name" width="20%"> 
