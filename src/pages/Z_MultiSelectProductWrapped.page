                                                    rendered="{!charge.isQuantityEditable && (mapPlanChargeType[charge.PRODUCT_RATE_PLAN_CHARGE_SFDC_ID]=='DLFee')}"> 
                                    </apex:inputText>  
                                                    
                                    <apex:outputText value="{!charge.QUANTITY}" rendered="{!!charge.isQuantityEditable}" />
                                </apex:column>
